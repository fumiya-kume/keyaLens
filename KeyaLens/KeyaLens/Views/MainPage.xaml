<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="KeyaLens.Views.MainPage"
             Title="MainPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{Binding PhotoURL.Value}" />
        <Button Text="TakePhoto" Command="{Binding TakePhotoCommand}"/>
        <ListView ItemsSource="{Binding TagList, Mode=OneWay}" SelectedItem="{Binding TappedMember.Value, Mode=TwoWay}"/>
    </StackLayout>
</ContentPage>